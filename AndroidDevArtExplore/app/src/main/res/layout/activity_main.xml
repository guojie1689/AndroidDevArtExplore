<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.devartexplore.MainActivity">

    <Button
        android:id="@+id/btn_launchmode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="launchmode" />

    <Button
        android:id="@+id/btn_intent_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="intentFilter" />

    <Button
        android:id="@+id/btn_ipc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IPC" />

    <Button
        android:id="@+id/btn_view_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View事件分发" />

    <Button
        android:id="@+id/btn_view_work_impl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View工作原理" />

    <Button
        android:id="@+id/btn_view_remote_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RemoteView" />

    <Button
        android:id="@+id/btn_drawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drawable" />

</LinearLayout>
